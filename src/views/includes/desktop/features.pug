include ../../common/mixins.pug
-
	var deskFeatList = [
		{
			icon: "cloud",
			title: "Постоянные обновления",
			desc: "Приложения REKK постоянно обновляются и в них добавляются новые функции. "
		},
		{
			icon: "rocket-up",
			title: "Быстрая установка",
			desc: "Установка приложений REKK для MacOS и ПК занимает меньше 5 минут."
		},
		{
			icon: "micro",
			title: "Высокое качество",
			desc: "Все записи разговоров сохраняются на устройство в высоком качестве."
		}
	]

section.features
	.features__container.container
		h2.features__title Преимущества REKK для MacOS и ПК
		ul.features__list
			each item in deskFeatList
				li.features__item
					.features__item-img
						+icon(item.icon, `features__item-icon features__item-icon--${item.icon}`)
					h3.features__item-title=item.title
					.features__item-desc.desc=item.desc
		.features__buttons
			.features__btn
				+appleBtn(features, "Скачать REKK для MacOS")
			.features__btn
				+recBtn(features, "Скачать REKK для ПК", "", "/", "win")