-
	var featList = [
		{
			title: "Simple start",
			desc: "Transparent pricing so you know the cost before purchasing.",
			icon: "rocket"
		},
		{
			title: "Free demo version",
			desc: "Your content is protected. Our vetted workforce only uses secure tools.",
			icon: "free"
		},
		{
			title: "For any operation system",
			desc: "Round-the-clock service to serve you best.",
			icon: "mobile"
		}
	]
section.features
	.features__container.container
		h2.features__title Features
		ul.features__list
			each item in featList
				li.features__item
					.features__item-img
						+icon(item.icon, `features__item-icon features__item-icon--${item.icon}`)
					h3.features__item-title=item.title
					.features__item-desc.desc=item.desc
		.features__buttons
			.features__btn
				+appleBtn(features)
			.features__btn
				+recBtn(features)